<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/textView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

<!--卡片-->
    <ImageView
        android:visibility="visible"
        android:id="@+id/search_space_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/search_space_green"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/search_space_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/search_space_blue"/>

    <!--文字-->
    <LinearLayout
        android:id="@+id/part_14"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="31"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/room_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小女儿的房间"
                android:textSize="17sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="12dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_weight="23"
            android:layout_height="60dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:visibility="visible"
                    android:id="@+id/search_arrow_green"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/search_arrow_green"/>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/search_arrow_blue"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/search_arrow_blue"/>

                <TextView
                    android:id="@+id/next_room_title"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#023525"
                    android:textSize="10sp"
                    android:text="没有更多了"/>

            </LinearLayout>
            <Button
                android:layout_marginLeft="30dp"
                android:id="@+id/search_add_items"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"/>

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/part_15"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="45dp"
        android:layout_below="@id/part_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/stg_n"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="99"
            android:textSize="22sp"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/it_n"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="99"
            android:textSize="22sp"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/str_n"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="99"
            android:textSize="22sp"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/part_17"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="45dp"
        android:layout_below="@id/part_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="收纳点"
            android:textSize="11sp"
            android:textColor="#ffffff"/>
        <TextView
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="物品数"
            android:textSize="11sp"
            android:textColor="#ffffff"/>
        <TextView
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="星标物品"
            android:textSize="11sp"
            android:textColor="#ffffff"/>
    </LinearLayout>


    <ImageView
        android:layout_marginTop="25dp"
        android:layout_below="@+id/part_17"
        android:id="@+id/search_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/search_list" />

    <ScrollView
        android:id="@+id/single_container"
        android:layout_marginTop="220dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        >

        <search.CardLinearLayout
            android:id="@+id/cardLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:gravity="center_horizontal|top"
            android:orientation="vertical" >
        </search.CardLinearLayout>
    </ScrollView>
</RelativeLayout>