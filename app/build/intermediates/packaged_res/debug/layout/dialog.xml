<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/part44"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/x1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.11" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/search_card_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/linearLayout22"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/part44"
        app:layout_constraintTop_toTopOf="@+id/x1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="· 任务名称"
            android:textColor="#14CED5"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#33000000"
            android:layout_marginRight="30dp"
            android:background="@color/smssdk_transparent"
            android:gravity="center"
            android:hint="点击输入"
            android:textColor="#bb000000"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout23"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout22"
        app:layout_constraintStart_toStartOf="@+id/part44"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout22">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="· 任务详情"
            android:textColor="#14CED5"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@color/smssdk_transparent"
            android:textColorHint="#33000000"
            android:gravity="center"
            android:hint="点击输入"
            android:textColor="#bb000000"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/linearLayout21"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/imageView23"
        app:layout_constraintStart_toStartOf="@+id/part44"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout23">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="· 人员指派"
            android:textColor="#14CED5"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="serif"/>

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@color/smssdk_transparent"
            android:gravity="center"
            android:hint="可选人员见下方"
            android:textColorHint="#33000000"
            android:textColor="#bb000000"
            android:textSize="14sp"  />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout24"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/part44"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout21">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="家庭成员："
            android:textStyle="bold" />

        <HorizontalScrollView
            android:scrollbars="none"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal" >
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </HorizontalScrollView>
    </LinearLayout>

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/select_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="点击选择任务日期"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/part44" />



    </androidx.constraintlayout.widget.ConstraintLayout>