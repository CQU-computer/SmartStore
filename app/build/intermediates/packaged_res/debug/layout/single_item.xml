<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/star_object_card_1"
        android:layout_width="55dp"
        android:layout_height="55dp">

        <ImageView
            android:id="@+id/star_object_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/star_thing_example_1" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/itemtitle"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="10dp"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:background="@drawable/circle_text"
        android:text="阿司匹林"
        android:gravity="center"
        android:textColor="#238F7F"
        android:textStyle="bold"
        android:textSize="11sp" />
    <TextView
        android:id="@+id/item_disciption"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:lines="3"
        android:text="卧室 - 1号床头柜 - 第3抽屉"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/item_deadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2024.12.12"
        android:textColor="#BB000000"
        android:textSize="11sp" />

</LinearLayout>