<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6F6"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--part1-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <!--背景-->
            <ImageView
                android:scaleType="fitStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/p1_total_bgr"/>

            <!--仓库名称-->
            <RelativeLayout
                android:id="@+id/part_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                >

                <ImageView
                    android:id="@+id/HeadLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/title" />

                <LinearLayout
                    android:id="@+id/part_3"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-6dp">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="22"
                        android:background="#00000000" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="65"
                        android:text="我的智慧家"
                        android:textColor="#1D4642"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/introduction_btn"
                        android:layout_width="0dp"
                        android:layout_weight="12"
                        android:layout_height="match_parent"
                        android:background="#00000000"/>
                    <Button
                        android:id="@+id/notice_btn"
                        android:layout_width="0dp"
                        android:layout_weight="12"
                        android:layout_height="match_parent"
                        android:background="#00000000"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/space_discription_btn"
                    android:layout_below="@id/part_3"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="120dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:text=""
                    android:hint="点击添加描述"
                    />

            </RelativeLayout>

            <!--AI入库-->
            <ImageView
                android:id="@+id/camera_btn"
                android:layout_below="@id/part_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/store1"
                android:adjustViewBounds="true"/>

            <!--分区查找 + 定制空间-->
            <RelativeLayout
                android:layout_marginTop="15dp"
                android:id="@+id/part1"
                android:layout_below="@id/camera_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/store2"
                    android:adjustViewBounds="true"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/store3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/search_btn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"/>
                    <Button
                        android:id="@+id/manage_btn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"/>
                </LinearLayout>
            </RelativeLayout>

            <!--仓库数据-->
            <RelativeLayout
                android:layout_marginTop="15dp"
                android:id="@+id/part_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/part1"
                >

                <ImageView
                    android:id="@+id/card_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/card1"
                    android:adjustViewBounds="true"/>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/storedata"
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:layout_height="wrap_content"
                        android:text="仓库数据"
                        android:textColor="#404040"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/card_1_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="99"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="物品总数"
                            android:textColor="#787878"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="99"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="空间总数"
                            android:textColor="#787878"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="99"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="临期物品"
                            android:textColor="#787878"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="3"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="家庭人数"
                            android:textColor="#787878"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <!--星标系列-->
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_below="@id/part_2"
                android:id="@+id/star_1_bgr"
                android:src="@drawable/star_object_bgr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                />
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_below="@id/part_2"
                android:id="@+id/star_2_bgr"
                android:src="@drawable/star_object_bgr_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:visibility="gone" />
            <!--星标物品内容-->
            <HorizontalScrollView
                android:scrollbars="none"
                android:id="@+id/star_object"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:layout_below="@id/part_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="1000dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/star_object_card_1"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            app:cardCornerRadius="10dp"
                            app:cardMaxElevation="10dp"
                            >

                            <ImageView
                                android:id="@+id/star_object_1"
                                android:layout_width="75dp"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/star_thing_example_1" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_marginTop="5dp"
                            android:paddingHorizontal="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:background="@drawable/circle_text"
                            android:text="阿司匹林"
                            android:gravity="center"
                            android:textColor="#238F7F"
                            android:textStyle="bold"
                            android:textSize="12sp" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:lines="3"
                            android:text="卧室 - 1号床头柜 - 第3抽屉"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2024.12.12"
                            android:textColor="#BB000000"
                            android:textSize="11sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:card="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/star_object_card_2"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            app:cardCornerRadius="10dp"
                            card:cardMaxElevation="10dp"
                            >

                            <ImageView
                                android:id="@+id/star_object_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/star_thing_example_1"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_marginTop="5dp"
                            android:paddingHorizontal="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:background="@drawable/circle_text"
                            android:text="阿司匹林"
                            android:gravity="center"
                            android:textColor="#238F7F"
                            android:textStyle="bold"
                            android:textSize="12sp" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:lines="3"
                            android:text="卧室 - 1号床头柜 - 第3抽屉"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2024.12.12"
                            android:textColor="#BB000000"
                            android:textSize="11sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:card="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/star_object_card_3"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            app:cardCornerRadius="10dp"
                            card:cardMaxElevation="10dp"
                            >

                            <ImageView
                                android:id="@+id/star_object_3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/star_thing_example_1"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_marginTop="5dp"
                            android:paddingHorizontal="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="阿司匹林"
                            android:gravity="center"
                            android:textColor="#238F7F"
                            android:textStyle="bold"
                            android:textSize="12sp" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:lines="3"
                            android:text="卧室 - 1号床头柜 - 第3抽屉"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2024.12.12"
                            android:textColor="#BB000000"
                            android:textSize="11sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:card="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/star_object_card_4"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            app:cardCornerRadius="10dp"
                            card:cardMaxElevation="10dp"
                            >

                            <ImageView
                                android:id="@+id/star_object_4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/star_thing_example_1"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:paddingHorizontal="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:background="@drawable/circle_text"
                            android:text="阿司匹林"
                            android:gravity="center"
                            android:textColor="#238F7F"
                            android:textStyle="bold"
                            android:textSize="12sp" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:lines="3"
                            android:text="卧室 - 1号床头柜 - 第3抽屉"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2024.12.12"
                            android:textColor="#BB000000"
                            android:textSize="11sp" />

                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>
            <LinearLayout
                android:id="@+id/part_5"
                android:layout_below="@id/part_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/star_btn_1"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="#00000000" />

                <Button
                    android:id="@+id/star_btn_2"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="#00000000" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</ScrollView>
